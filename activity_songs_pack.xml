<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BlackClar"
    android:orientation="vertical"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <Space
        android:layout_width="wrap_content"
        android:layout_height="20dp" />

    <ImageView
        android:id="@+id/songs"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:src="@drawable/songs"/>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="20dp" />

    <TextView
        android:padding="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose a ringtone pack and pick up your favourite ringtone next time you set up an alarm."
        android:textSize="18dp" />

    <TextView
        android:paddingLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Keep using ReminderApp to unblock new Ringtones"
        android:textSize="18dp" />
    <Space
        android:layout_width="wrap_content"
        android:layout_height="20dp" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/BlackClar"
        android:orientation="horizontal">

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="200dp"
        android:paddingLeft="20dp"
        android:paddingRight="50dp"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@color/BlackClar">

        <RadioButton
            android:id="@+id/radio_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Default"
            android:checked="true"
            android:textColor="@color/White"
            android:buttonTint="@color/White"/>

        <RadioButton
            android:id="@+id/radio_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cartoons"
            android:enabled="false"
            android:textColor="@android:color/darker_gray"
            android:buttonTint="@android:color/darker_gray"/>

        <RadioButton
            android:id="@+id/radio_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:text="TVSeries"
            android:textColor="@android:color/darker_gray"
            android:buttonTint="@android:color/darker_gray"/>

        <RadioButton
            android:id="@+id/radio_four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:text="Football Best Goals"
            android:textColor="@android:color/darker_gray"
            android:buttonTint="@android:color/darker_gray"/>


    </RadioGroup>

        <Button
            android:id="@+id/button"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:background="@drawable/btn_rounded"
            android:padding="10dp"
            android:text="APPLY"
            android:textColor="@color/BlackClar" />




</LinearLayout>

</LinearLayout>