<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BlackClar"
    android:orientation="vertical"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <Space
        android:layout_width="wrap_content"
        android:layout_height="20dp" />

    <ImageView
        android:id="@+id/feedback"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:src="@drawable/feedback"/>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="10dp" />

    <TextView
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Critiques have an enormous value and ReminderApp wants to make you a tough jury for 10 seconds."
        android:textSize="18dp" />

    <TextView
        android:paddingLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please don't be shy and rate the app."
        android:textSize="18dp" />
    <Space
        android:layout_width="wrap_content"
        android:layout_height="20dp" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="113dp"
        android:layout_height="178dp"
        android:layout_gravity="center"
        android:background="@color/BlackClar">

        <RadioButton
            android:id="@+id/radio_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Poor"
            android:checked="true"
            android:textColor="@color/White"
            android:buttonTint="@color/White"/>

        <RadioButton
            android:id="@+id/radio_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Okey"
            android:textColor="@color/White"
            android:buttonTint="@color/White"/>


        <RadioButton
            android:id="@+id/radio_four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Good"
            android:textColor="@color/White"
            android:buttonTint="@color/White"/>

        <RadioButton
            android:id="@+id/radio_five"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Excellent"
            android:textColor="@color/White"
            android:buttonTint="@color/White"/>

    </RadioGroup>


    <Button
        android:id="@+id/buttonsend"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:background="@drawable/btn_rounded"
        android:padding="10dp"
        android:text="SEND"
        android:textColor="@color/BlackClar" />

    <TextView
        android:id="@+id/thankyou"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:textSize="18dp"
        android:textColor="@color/YellowFluo"
        android:layout_height="wrap_content"
        android:text="Thank you for your Feedback" />


</LinearLayout>