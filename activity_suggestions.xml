<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BlackClar"
    android:orientation="vertical">

    <Space
        android:layout_width="wrap_content"
        android:layout_height="20dp" />

    <ImageView
        android:id="@+id/suggestions"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:src="@drawable/question"/>



    <TextView
        android:padding="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Every suggestion will be heard.
Let us know what would you like to add."
        android:textSize="18dp" />

    <TextView
        android:paddingLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A ringtone, a funny video that appears when the alarm fires up. Do it!
Because this is also your application!"
        android:textSize="18dp" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/BlackClar"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textview"
            android:padding="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Suggestion : "
            android:textSize="18dp" />


<EditText
    android:id="@+id/textedit"
    android:layout_width="200dp"
    android:layout_height="wrap_content" />



    </LinearLayout>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="80dp" />

    <Button
        android:id="@+id/buttonsend"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/btn_rounded"
        android:padding="10dp"
        android:text="SEND"
        android:textColor="@color/BlackClar" />

    <TextView
        android:id="@+id/thankyou"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:textSize="18dp"
        android:textColor="@color/YellowFluo"
        android:layout_height="wrap_content"
        android:text="Thank you for your time" />


</LinearLayout>




