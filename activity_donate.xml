<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BlackClar"
    android:orientation="vertical"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <Space
        android:layout_width="wrap_content"
        android:layout_height="20dp" />

    <ImageView
        android:id="@+id/paypal"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:clickable="true"
        android:src="@drawable/paypal"/>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="20dp" />

    <TextView
        android:paddingLeft="20dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="alvbarber1@gmail.com"
        android:textColor="@color/BlueClar"
        android:textSize="28dp" />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="40dp" />

    <TextView
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The decision is yours. 1 cent, 1 euro. Just click on the PayPal icon."
        android:textSize="18dp" />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="10dp" />

    <TextView
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="It means the whole world knowing that ReminderApp is used among the users and this will keep creating and developing new features."
        android:textSize="18dp" />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="10dp" />

    <TextView
        android:paddingLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your words are also so valious. So use them and let us know about your experience in the Feedback section."
        android:textSize="18dp" />





</LinearLayout>